<h1>New task</h1>
<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details %>
  </div>

  <%= f.submit class: 'btn btn-submit' %>
<% end %>

<p><%= link_to 'Cancel', tasks_path %></p>
